<!DOCTYPE html>
<html>
  <head>
    <title>RadamePortfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <nav class="navbar navbar-expand-md navbar-dark">
      
      <%= link_to 'Robert Adame', root_path, class: 'navbar-brand' %>
      
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#profileToggler" aria-controls="profileToggler" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

            
      <div class="collapse navbar-collapse" id="profileToggler">
        <ul class="navbar-nav mr-auto mt-2 mt-md-0">
          <li class="nav-item">
            <%= link_to 'Projects', projects_path, class: 'nav-link' %>
                       
          </li>
        </ul>
        <ul class="navbar-nav">
          <% if user_signed_in? %>
            <li class="nav-item">
              <%= link_to 'Sign Out', destroy_user_session_path , method: :delete, class: 'nav-link' %>
            </li>
          <% else %>
            <li class="nav-item">
              <%= link_to 'Sign In', new_user_session_path, class: 'nav-link' %>
            </li>
            <li class="nav-item">
              <%= link_to 'Sign up', new_user_registration_path, class: 'nav-link' %>
            </li>
          <% end %>
        </ul>
      </div>
    </nav>

    <br class="clear" />

    <div class="wrapper">
      <% if flash[:error].present? %>
        <div class="col-10 offset-1 alert alert-danger">
          <%= flash[:error].html_safe %>
        </div>
      <% end %>

    <% if notice.present? %>
      <p class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert.present? %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>
    
      <%= yield %>
    </div>
    <div class="push"></div>

    <div class="footer">
      <div class="container">
        <div class="row">
          <div class="col-6 offset-1">

          </div>
          <div class="col-6 offset-1">
            <p>Profiles</p>
            <%= link_to "GitHub", 'https://github.com/radamejr', target: :_blank %>
            <br />
            <%= link_to "LinkedIn", 'https://www.linkedin.com/in/radamejr/', target: :_blank %>
          </div>
        </div>
      </div>
    </div>


  </body>
</html>
