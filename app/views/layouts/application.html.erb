<!DOCTYPE html>
<html>
  <head>
    <title>RadamePortfolio</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

      <!-- Modal -->
    <div class="modal fade" id="projectModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">Ã—</span>
            </button>
            <h4 class="modal-title" id="myModalLabel">Add a Project</h4>
          </div>
          <div class="modal-body">
           <%= simple_form_for Project.new do |f| %>
              <%= f.input :title %>
              <%= f.input :description %>
              <%= f.input :utilized %>
              
           
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <%= f.submit 'Add Project', class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  <body>
    <nav class="navbar navbar-expand-md navbar-dark">
      
      <%= link_to 'Robert Adame', root_path, class: 'navbar-brand' %>
      
      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#profileToggler" aria-controls="profileToggler" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

            
      <div class="collapse navbar-collapse" id="profileToggler">
        <ul class="navbar-nav mr-auto mt-2 mt-md-0">
          <li class="nav-item">
            <%= link_to '#', class: 'nav-link' do %>
            Projects
            <% end %>
          </li>
          
          <li class="nav-item">
            <%= link_to '#', data: {toggle: 'modal', target: '#projectModal'} , class: 'nav-link' do %>
            Add Project
            <% end %>
          </li>
        </ul>
        <ul class="navbar-nav">
          <!-- eventually add login and other links as needed" -->
        </ul>
      </div>
    </nav>

    <br class="clear" />

    <div class="content">
      <% if flash[:error].present? %>
        <div class="col-10 offset-1 alert alert-danger">
          <%= flash[:error].html_safe %>
        </div>
      <% end %>
      <%= yield %>
    </div>

    <div class="footer">
      <div class="container">
        <div class="row">
          <div class="col-6">
            <p>FooterGoingHere.</p>
          </div>
          <div class="col-6">
            <p>more footer here</p>
          </div>
        </div>
      </div>
    </div>


  </body>
</html>
